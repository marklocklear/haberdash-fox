doctype html
html
  head
    meta content="width=device-width, initial-scale=1.0" name="viewport"
    title= content_for?(:title) ? yield(:title) : "Haberdasher Fox"
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)
    script type="text/javascript" src="//use.typekit.net/ask0gfq.js"
    javascript:
      try{Typekit.load();}catch(e){}

    script type="text/javascript" src="/javascripts/jquery-1.8.2.min.js"
    script type="text/javascript" src="/javascripts/underscore-1.4.2.min.js"
    script type="text/javascript" src="/javascripts/jquery.fittext.custom.js"
    script type="text/javascript" src="/javascripts/navigation.js"

    = stylesheet_link_tag "social/ss-social"
    = stylesheet_link_tag "standard/ss-standard"

  body
    .container.main
      .top-bar
        .top-bar-content
          | A Collection Of The Best Menswares On Etsy
      .top-nav 
        = link_to(image_tag('haberdash-logotype.svg', :class=>"logotype"), '/')
      .menu
        a href="#" class="ss-icon ss-standard mobile-menu" rows
      .sidebar
        img src="/assets/sidebar-top.png" class="sidebar-top"
        = render 'layouts/navigation'

      .content
        = yield

      .footer
        ul.submenu 
          li 
            a href="" About
          li 
            a href="http://twitter.com/#/thehaberdashfox" target="_blank" Twitter
          li
            a href="" Contact

        .bottom-bar
          | A Collection Of The Best Menswares On Etsy
